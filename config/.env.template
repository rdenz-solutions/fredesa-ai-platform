# FreDeSa AI Platform - Environment Configuration Template
# Copy this file to .env in the root directory and fill in your values
# cp config/.env.template .env

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL connection string (local development)
DATABASE_URL=postgresql://fredesa:dev_password_changeme@localhost:5432/fredesa_dev

# Individual database components (for docker-compose)
POSTGRES_USER=fredesa
POSTGRES_PASSWORD=dev_password_changeme
POSTGRES_DB=fredesa_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================================================
# VECTOR SEARCH & AI
# ============================================================================

# OpenAI API key for embeddings generation
OPENAI_API_KEY=sk-your-openai-api-key-here

# Enable/disable vector search feature
ENABLE_VECTOR_SEARCH=true

# Vector dimensions (OpenAI text-embedding-3-small uses 1536)
VECTOR_DIMENSIONS=1536

# ============================================================================
# AZURE AD AUTHENTICATION
# ============================================================================

# Azure AD Application (Client) ID
AZURE_CLIENT_ID=your-azure-client-id-here

# Azure AD Tenant (Directory) ID
AZURE_TENANT_ID=your-azure-tenant-id-here

# Azure AD Client Secret (for backend only)
AZURE_CLIENT_SECRET=your-azure-client-secret-here

# Azure AD Authority URL
AZURE_AUTHORITY=https://login.microsoftonline.com/your-tenant-id-here

# API Scope for token exchange
AZURE_API_SCOPE=api://your-api-scope-here/access_as_user

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Backend API base URL
API_BASE_URL=http://localhost:8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API version
API_VERSION=v1

# ============================================================================
# ENVIRONMENT & DEPLOYMENT
# ============================================================================

# Environment: development, staging, production, test
ENVIRONMENT=development

# Debug mode (true for development, false for production)
DEBUG_MODE=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable specific features
ENABLE_MCP_SERVERS=true
ENABLE_AIRIA_INTEGRATION=false
ENABLE_SEMANTIC_SEARCH=true
ENABLE_CUSTOMER_PROVISIONING=false
ENABLE_SKILLS_MARKETPLACE=false

# ============================================================================
# REDIS (Optional - for caching and sessions)
# ============================================================================

# Redis connection string
REDIS_URL=redis://localhost:6379/0

# Redis password (if enabled)
REDIS_PASSWORD=

# ============================================================================
# AIRIA PLATFORM INTEGRATION (Optional)
# ============================================================================

# Airia API endpoints
AIRIA_API_URL=https://airia.com/api
AIRIA_WEB_API_URL=https://explorer.airia.com/api

# Airia authentication
AIRIA_API_KEY=your-airia-api-key-here
AIRIA_PROJECT_ID=your-airia-project-id-here

# ============================================================================
# MONITORING & TELEMETRY (Optional)
# ============================================================================

# Application Insights connection string
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string-here

# Enable telemetry
ENABLE_TELEMETRY=false

# Sentry DSN (for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# ============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ============================================================================

# SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password-here
SMTP_FROM=noreply@fredesa.com

# ============================================================================
# AWS CONFIGURATION (Optional - for S3 storage)
# ============================================================================

# AWS credentials
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=us-east-1

# S3 bucket for file storage
AWS_S3_BUCKET=fredesa-storage

# ============================================================================
# SECURITY
# ============================================================================

# JWT secret for token signing (generate with: openssl rand -hex 32)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# JWT expiration time (in seconds)
JWT_EXPIRATION=3600

# Session secret
SESSION_SECRET=your-session-secret-here

# ============================================================================
# RATE LIMITING
# ============================================================================

# Requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# Requests per hour per user
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# KNOWLEDGE REGISTRY SPECIFICS
# ============================================================================

# Number of sources in knowledge registry
TOTAL_SOURCES=1274

# Trust score threshold for search results
MIN_TRUST_SCORE=70

# Maximum search results to return
MAX_SEARCH_RESULTS=50

# Semantic search similarity threshold
SIMILARITY_THRESHOLD=0.7
